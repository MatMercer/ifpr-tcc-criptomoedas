doi = {10.14569/IJACSA.2015.060915},
file = {:home/mat/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Krishnan, Saketh, Tej Vaibhav - 2015 - Cryptocurrency Mining – Transition to Cloud.pdf:pdf},
